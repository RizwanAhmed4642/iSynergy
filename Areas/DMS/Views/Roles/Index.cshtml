@model IEnumerable<iSynergy.Areas.DMS.Models.DocumentAccessRole>

@{
    ViewBag.Title = "Roles";
}

<section class="box" style="border-left: 3px solid #e77512;">
    <header class="panel_header">
        <h2 class="title pull-left">@ViewBag.Title</h2>
    </header>
    <div class="content-body">
        <div class="row">
            <div class="col-xs-12">
                <a href="@Url.Action("Create")"><Span class="btn btn-success btn-icon background bottom15 pull-right"><i class="fa fa-plus"></i> &nbsp; Add New Role</Span></a>
                <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.css">
                <table id="grid" class="table table-striped table-bordered" cellspacing="0">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td align="center">
                                    <a href="@Url.Action("Edit", "Roles", new { id = item.DocumentAccessRoleId })"><span><i class="fa fa-pencil"></i></span></a> |
                                    <a href="@Url.Action("Details", "Roles", new { id = item.DocumentAccessRoleId })"><span><i class="fa fa-eye"></i></span></a> |
                                    <a href="@Url.Action("Delete", "Roles", new { id = item.DocumentAccessRoleId })"><span><i class="fa fa-trash"></i></span></a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

                </div>

            </div>
        </div>
    </div>
</section>
@section Scripts {
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.js"></script>
    <script type="text/javascript">
            $(document).ready(function () {
                $('#grid').DataTable({
                    "pageLength": 100
                });
            });
    </script>
}