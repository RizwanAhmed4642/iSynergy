@model iSynergy.Areas.DMS.Models.DocumentFolder

@{
    ViewBag.Title = "Folder Details";
}

<section class="box" style="border-left: 3px solid #e77512;">
    <header class="panel_header">
        <h2 class="title pull-left">@ViewBag.Title</h2>
    </header>
    <div class="content-body">
        <div class="row">
            <div class="col-xs-12">

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                </dl>
            </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.DocumentFolderId }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
            </div>
        </div>
    </div>
</section>

